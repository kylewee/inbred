:80 {
	root * /srv
	
	# Redirect /admin to /crm for admin interface
	redir /admin /crm/index.php permanent
	redir /admin/* /crm{uri} permanent
	
	# Enable PHP processing
	php_fastcgi php:9000
	
	# Serve static files
	file_server browse

	# Try files in order, fallback to index.html
	try_files {path} {path}/ /index.html

	# Log requests
	log {
		output file /var/log/caddy/access.log
	}
}
